theme = Material Ocean

# split
keybind = cmd+\=new_split:right
keybind = cmd+-=new_split:down

keybind = cmd+down=goto_split:bottom
keybind = cmd+up=goto_split:top
keybind = cmd+right=goto_split:right
keybind = cmd+left=goto_split:left

keybind = cmd+s>z=toggle_split_zoom
keybind = cmd+e=equalize_splits

window-padding-x = 10
font-size = 15

background-opacity = 0.9
background-blur = true

keybind = cmd+shift+right=next_tab
keybind = cmd+shift+left=previous_tab
